<UserControl x:Class="DemonsRunner.Views.Controls.NotificationPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DemonsRunner.Views.Controls" 
             xmlns:viewmodels="clr-namespace:DemonsRunner.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:NotificationPanelViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" 
            ItemsSource="{Binding Notifications}">
        </ListBox>

        <Button Content="Clear Notifications"
                Command="{Binding ClearNotificationsCommand}"
                Grid.Row="1"
                Margin="100,5,100,5"/>
    </Grid>
</UserControl>
