             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views\Styles\Colours.xaml"/>
                <ResourceDictionary Source="Views\Styles\FontsSizes.xaml"/>
                <ResourceDictionary Source="Views\Styles\Images.xaml"/>
                <ResourceDictionary Source="Views\Styles\RoundingAngles.xaml"/>

                <ResourceDictionary Source="Views\Styles\TextBlocks.xaml"/>
